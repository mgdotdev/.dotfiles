[core]
    pager = delta

[alias]
    c = "!f() { git add -A && git commit -m \"$1\"; }; f"
    i = "!f() { git init && git C \"initial commit\"; }; f"
    d = diff
    s = status
    b = branch
    clear-out = "!f() { if [ -z $1 ]; then BRANCH=$(git branch | grep \"\\*\\(.*\\)\" | cut -b 1,2 --complement); else BRANCH=$1; fi; git branch --merged $BRANCH | grep -v $BRANCH | xargs git branch -d; }; f"
    co = checkout
    fzf = "!f() { git checkout $(git branch | fzf); }; f"
    self = "!f() { git branch | sed -rn \"s/\\*\\ (.*)/\\1/p\"; }; f"
    pop = stash pop
    rh = reset --hard HEAD

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    light = false    # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[init]
	defaultBranch = main

[user]
	email = self@michaelgreen.dev
	name = Michael Green

[pull]
	rebase = false

